    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
